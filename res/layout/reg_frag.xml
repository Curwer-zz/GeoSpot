<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/reg_back"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:text="Register to  GeoSpot"
            android:textColor="#50FFFFFF" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView2"
            android:background="@drawable/edittexttop"
            android:hint="First Name"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#000000"
            android:textSize="15dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView2"
            android:layout_toLeftOf="@+id/textView"
            android:text="Last Name"
            android:layout_marginLeft="10dp"
            android:textColor="#50FFFFFF"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView3"
            android:background="@drawable/edittext"
            android:hint="Last Name"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="Email"
            android:layout_marginLeft="10dp"
            android:textColor="#50FFFFFF"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lname"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#000000"
            android:textSize="15dp" 
            android:singleLine="true"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignRight="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:text="Username"
            android:textColor="#50FFFFFF"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/uname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView5"
            android:background="@drawable/edittext"
            android:hint="Username"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/pword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_alignLeft="@+id/uname"
            android:layout_below="@+id/textView5"
            android:background="@drawable/edittextbot"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignTop="@+id/pword"
            android:text="Password"
            android:textColor="#50FFFFFF"
            android:textSize="15dp" />

        <Button
            android:id="@+id/register"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/pword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/loginstyle"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/register_error"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView"
            android:text="First Name"
            android:textColor="#50FFFFFF"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>